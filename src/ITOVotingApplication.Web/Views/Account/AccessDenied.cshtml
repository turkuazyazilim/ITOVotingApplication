@* VotingApplication.Web/Views/Account/AccessDenied.cshtml *@
@{
    ViewData["Title"] = "Erişim Engellendi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Seçim Sistemi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .error-container {
            text-align: center;
            color: white;
        }

        .error-code {
            font-size: 120px;
            font-weight: bold;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .error-message {
            font-size: 24px;
            margin-bottom: 30px;
        }

        .btn-back {
            background: white;
            color: #667eea;
            padding: 12px 30px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
            display: inline-block;
        }

            .btn-back:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.3);
                color: #764ba2;
            }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-code">
            <i class="fas fa-lock"></i> 403
        </div>
        <div class="error-message">
            Erişim Engellendi
        </div>
        <p class="mb-4">Bu sayfaya erişim yetkiniz bulunmamaktadır.</p>
        <a href="javascript:history.back()" class="btn-back">
            <i class="fas fa-arrow-left"></i> Geri Dön
        </a>
        <a href="/" class="btn-back ms-3">
            <i class="fas fa-home"></i> Ana Sayfa
        </a>
    </div>
</body>
</html>