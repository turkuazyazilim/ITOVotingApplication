@* VotingApplication.Web/Views/Admin/Companies.cshtml *@
@model ITOVotingApplication.Web.Models.CompanyListViewModel
@{
    ViewData["Title"] = "Firma Yönetimi";
}

<div class="container-fluid">
    <h1 class="mt-4">Firma Yönetimi</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Firmalar</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <i class="fas fa-building me-1"></i>
                    Firma Listesi
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="CreateCompany" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Yeni Firma Ekle
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="get" class="mb-3">
                <div class="input-group">
                    <input type="text" name="search" value="@Model.SearchTerm" class="form-control" placeholder="Firma adı, sicil no veya vergi no ile ara...">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search"></i> Ara
                    </button>
                    <a asp-action="Companies" class="btn btn-secondary">
                        <i class="fas fa-refresh"></i> Temizle
                    </a>
                </div>
            </form>

            @if (Model.Companies?.Items?.Any() == true)
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Sicil No</th>
                                <th>Firma Unvanı</th>
                                <th>Vergi No</th>
                                <th>Şirket Tipi</th>
                                <th>Telefon</th>
                                <th>E-posta</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var company in Model.Companies.Items)
                            {
                                <tr>
                                    <td>@company.RegistrationNumber</td>
                                    <td>@company.Title</td>
                                    <td>@company.TaxNumber</td>
                                    <td>@company.CompanyType</td>
                                    <td>@company.OfficePhone</td>
                                    <td>@company.Email</td>
                                    <td>
                                        @if (company.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Pasif</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="EditCompany" asp-route-id="@company.Id" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="CompanyDetails" asp-route-id="@company.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.Companies.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            @if (Model.Companies.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Companies" asp-route-page="@(Model.Companies.PageNumber - 1)" asp-route-search="@Model.SearchTerm">Önceki</a>
                                </li>
                            }

                            @for (int i = 1; i <= Model.Companies.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.Companies.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-action="Companies" asp-route-page="@i" asp-route-search="@Model.SearchTerm">@i</a>
                                </li>
                            }

                            @if (Model.Companies.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Companies" asp-route-page="@(Model.Companies.PageNumber + 1)" asp-route-search="@Model.SearchTerm">Sonraki</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Kayıtlı firma bulunamadı.
                </div>
            }
        </div>
    </div>
</div>