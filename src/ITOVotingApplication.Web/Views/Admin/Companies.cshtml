                    const result = await response.json();
                    if (result.success) {
                        alert('✅ Belge başarıyla atandı');
                        closeAssignDocumentModal();
                        await loadDocumentTransactions(currentCompanyId, currentIsTCCompany);
                    } else {
                        alert('Atama başarısız: ' + result.message);
                    }
                } else {
                    alert('Atama başarısız');
                }
            } catch (error) {
                console.error('Error assigning document:', error);
                alert('Atama sırasında hata oluştu');
            }
        }

        // Load eligible contacts for assignment dropdown
        async function loadEligibleContactsForAssignment(companyId, transactionId, assignedContactId) {
            try {
                console.log('Loading contacts for company:', companyId, 'transaction:', transactionId);

                const response = await fetch(`/api/contact/company/${companyId}`, {
                    method: 'GET',
                    credentials: 'same-origin'
                });

                if (response.ok) {
                    const result = await response.json();
                    console.log('Contacts response:', result);

                    if (result.success) {
                        // Tüm bağlantıları göster (filtreleme yok)
                        const allContacts = result.data;
                        console.log('All contacts:', allContacts);

                        const selectElement = document.getElementById(`assignContact_${transactionId}`);
                        console.log('Select element found:', selectElement);

                        if (selectElement) {
                            // Clear existing options except first
                            selectElement.innerHTML = '<option value="">Yetkili Seçiniz...</option>';

                            // Add all contacts
                            allContacts.forEach(contact => {
                                const option = document.createElement('option');
                                option.value = contact.id;
                                // İsim, soyisim ve yetki türü göster
                                let displayText = `${contact.firstName} ${contact.lastName}`;
                                if (contact.authorizationTypeName) {
                                    displayText += ` - ${contact.authorizationTypeName}`;
                                }
                                // Oy kullanma yetkisi varsa belirt
                                if (contact.eligibleToVote) {
                                    displayText += ' ✓';
                                }
                                option.textContent = displayText;

                                if (assignedContactId && assignedContactId === contact.id) {
                                    option.selected = true;
                                }
                                selectElement.appendChild(option);
                            });

                            console.log('Added', allContacts.length, 'options to select');
                        } else {
                            console.error('Select element not found with id:', `assignContact_${transactionId}`);
                        }
                    }
                } else {
                    console.error('Response not ok:', response.status);
                }
            } catch (error) {
                console.error('Error loading eligible contacts:', error);
            }
        }

        // Save document assignment
        async function saveDocumentAssignment(transactionId, companyId) {
            try {
                const selectElement = document.getElementById(`assignContact_${transactionId}`);
                const contactId = selectElement.value;

                if (!contactId) {
                    alert('Lütfen bir yetkili seçiniz');
                    return;
                }

                const response = await fetch(`/api/company/document-transaction/${transactionId}/assign`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'same-origin',
                    body: JSON.stringify({
                        transactionId: parseInt(transactionId),
                        contactId: parseInt(contactId)
                    })
                });

                if (response.ok) {
                    const result = await response.json();
                    if (result.success) {
                        alert('✅ Belge başarıyla atandı');
                        await loadDocumentTransactions(companyId, currentIsTCCompany);
                    } else {
                        alert('Atama başarısız: ' + result.message);
                    }
                } else {
                    alert('Atama başarısız');
                }
            } catch (error) {
                console.error('Error saving document assignment:', error);
                alert('Atama sırasında hata oluştu');
            }
        }
