
@* VotingApplication.Web/Views/Admin/Index.cshtml *@
@model ITOVotingApplication.Web.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <h1 class="mt-4">Admin Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>

    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <i class="fas fa-building fa-3x"></i>
                        </div>
                        <div class="col-9 text-end">
                            <div class="huge">@Model.TotalCompanies</div>
                            <div>Firmalar</div>
                        </div>
                    </div>
                </div>
                <a class="card-footer text-white clearfix small z-1" asp-action="Companies">
                    <span class="float-start">Detayları Görüntüle</span>
                    <span class="float-end"><i class="fas fa-angle-right"></i></span>
                </a>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <i class="fas fa-users fa-3x"></i>
                        </div>
                        <div class="col-9 text-end">
                            <div class="huge">@Model.TotalUsers</div>
                            <div>Kullanıcılar</div>
                        </div>
                    </div>
                </div>
                <a class="card-footer text-white clearfix small z-1" asp-action="Users">
                    <span class="float-start">Detayları Görüntüle</span>
                    <span class="float-end"><i class="fas fa-angle-right"></i></span>
                </a>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <i class="fas fa-address-card fa-3x"></i>
                        </div>
                        <div class="col-9 text-end">
                            <div class="huge">@Model.TotalContacts</div>
                            <div>Yetkililer</div>
                        </div>
                    </div>
                </div>
                <a class="card-footer text-white clearfix small z-1" asp-action="Contacts">
                    <span class="float-start">Detayları Görüntüle</span>
                    <span class="float-end"><i class="fas fa-angle-right"></i></span>
                </a>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <i class="fas fa-vote-yea fa-3x"></i>
                        </div>
                        <div class="col-9 text-end">
                            <div class="huge">@Model.TotalVotes</div>
                            <div>Kullanılan Oylar</div>
                        </div>
                    </div>
                </div>
                <a class="card-footer text-white clearfix small z-1" asp-controller="Vote" asp-action="Results">
                    <span class="float-start">Sonuçları Görüntüle</span>
                    <span class="float-end"><i class="fas fa-angle-right"></i></span>
                </a>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Hızlı İşlemler
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a asp-action="CreateCompany" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus-circle text-success"></i> Yeni Firma Ekle
                        </a>
                        <a asp-action="CreateUser" class="list-group-item list-group-item-action">
                            <i class="fas fa-user-plus text-primary"></i> Yeni Kullanıcı Ekle
                        </a>
                        <a asp-action="CreateContact" class="btn btn-success">
                            <i class="fas fa-user-plus"></i> Yeni Yetkili Ekle
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-info-circle me-1"></i>
                    Sistem Bilgileri
                </div>
                <div class="card-body">
                    <p><strong>Kullanıcı:</strong> @Model.FullName</p>
                    <p><strong>Kullanıcı Adı:</strong> @Model.UserName</p>
                    <p><strong>Rol:</strong> Admin</p>
                    <p><strong>Son Giriş:</strong> @DateTime.Now.ToString("dd.MM.yyyy HH:mm")</p>
                </div>
            </div>
        </div>
    </div>
</div>