                } else {
                    alert(result.message || 'Güncelleme başarısız');
                }
            } catch (error) {
                console.error('Error saving company:', error);
                alert('Kaydetme sırasında hata oluştu');
            } finally {
                // Reset loading state
                $('#saveText').text('Kaydet');
                $('#saveSpinner').addClass('hidden');
                $('#saveCompanyBtn').prop('disabled', false);
            }
