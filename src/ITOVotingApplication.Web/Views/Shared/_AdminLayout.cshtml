<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITO Seçim Sistemi</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <style>
        :root {
            --sidebar-width: 250px;
            --header-height: 60px;
            --primary-color: #0056b3;
            --secondary-color: #6c757d;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        /* Header */
        .navbar-top {
            height: var(--header-height);
            background-color: white;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
            z-index: 1000;
        }

        .navbar-brand {
            font-weight: 600;
            color: var(--primary-color) !important;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: var(--header-height);
            left: 0;
            width: 60px;
            height: calc(100vh - var(--header-height));
            background-color: #2c3e50;
            overflow-y: auto;
            transition: all 0.3s;
            z-index: 999;
        }

            .sidebar.expanded {
                width: var(--sidebar-width);
            }

        .sidebar-nav {
            padding: 0;
            list-style: none;
        }

            .sidebar-nav li {
                position: relative;
            }

            .sidebar-nav a {
                display: flex;
                align-items: center;
                padding: 12px 20px;
                color: #ecf0f1;
                text-decoration: none;
                transition: all 0.3s;
            }

                .sidebar-nav a:hover {
                    background-color: #34495e;
                    color: white;
                }

                .sidebar-nav a.active {
                    background-color: var(--primary-color);
                    color: white;
                }

            .sidebar-nav i {
                width: 20px;
                margin-right: 10px;
                text-align: center;
            }

        .sidebar .sidebar-nav span {
            display: none;
        }

        .sidebar.expanded .sidebar-nav span {
            display: inline;
        }

        .sidebar .sidebar-nav i {
            margin-right: 0;
        }

        .sidebar.expanded .sidebar-nav i {
            margin-right: 10px;
        }

        /* Main Content */
        .main-content {
            margin-left: 60px;
            padding-top: var(--header-height);
            min-height: 100vh;
            transition: all 0.3s;
        }

            .main-content.expanded {
                margin-left: var(--sidebar-width);
            }

        .content-wrapper {
            padding: 20px;
        }

        /* User Menu */
        .user-menu {
            display: flex;
            align-items: center;
        }

        .user-avatar {
            width: 35px;
            height: 35px;
            background-color: var(--primary-color);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            margin-right: 10px;
        }

        .user-info {
            display: flex;
            flex-direction: column;
            margin-right: 10px;
        }

        .user-name {
            font-size: 14px;
            font-weight: 600;
            color: #333;
        }

        .user-role {
            font-size: 12px;
            color: #6c757d;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .user-info {
                display: none;
            }
        }

        /* Cards */
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            margin-bottom: 1.5rem;
        }

        .card-header {
            background-color: white;
            border-bottom: 1px solid #e3e6f0;
            font-weight: 600;
            color: var(--primary-color);
        }

        /* Utilities */
        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

            .btn-primary:hover {
                background-color: #004494;
                border-color: #004494;
            }

        .dropdown-menu {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border: none;
        }

        .badge {
            padding: 0.35em 0.65em;
        }
    </style>
</head>
<body>
    <!-- Top Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light navbar-top fixed-top">
        <div class="container-fluid">
            <button class="btn btn-link" id="sidebarToggle" onclick="toggleSidebar()">
                <i class="bi bi-list fs-5"></i>
            </button>
            <a class="navbar-brand ms-2" href="/Admin/Dashboard">
                <i class="bi bi-box-arrow-in-right"></i> ITO Seçim Sistemi
            </a>

            <div class="ms-auto d-flex align-items-center">
                <div class="dropdown">
                    <a class="text-decoration-none" href="#" role="button" data-bs-toggle="dropdown">
                        <div class="user-menu">
                            <div class="user-info">
                                <span class="user-name" id="userName">Yükleniyor...</span>
                                <span class="user-role" id="userRole">Admin</span>
                            </div>
                            <div class="user-avatar" id="userInitials">
                                <i class="bi bi-person"></i>
                            </div>
                        </div>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/Admin/Profile"><i class="bi bi-person-circle"></i> Profil</a></li>
                        <li><a class="dropdown-item" href="/Admin/Settings"><i class="bi bi-gear"></i> Ayarlar</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#" onclick="logout()"><i class="bi bi-box-arrow-right"></i> Çıkış Yap</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar" style="width: 60px;">
        <ul class="sidebar-nav">
            <li>
                <a href="/Admin/Dashboard" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/Admin/Companies" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Companies" ? "active" : "")">
                    <i class="bi bi-building"></i>
                    <span>Firmalasssdr</span>
                </a>
            </li>
            <li>
                <a href="/Admin/Contacts" class="@(ViewContext.RouteData.Values["action"]?.ToString()?.Contains("Contact") == true ? "active" : "")">
                    <i class="bi bi-people"></i>
                    <span>Yetkili Kişiler</span>
                </a>
            </li>
            <li>
                <a href="/Admin/BallotBoxes" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "BallotBoxes" ? "active" : "")">
                    <i class="bi bi-inbox"></i>
                    <span>Sandıklar</span>
                </a>
            </li>
            <li>
                <a href="/Admin/Votes" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Votes" ? "active" : "")">
                    <i class="bi bi-check2-square"></i>
                    <span>Oylar</span>
                </a>
            </li>
            <li>
                <a href="/Admin/Committees" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Committees" ? "active" : "")">
                    <i class="bi bi-diagram-3"></i>
                    <span>Komiteler</span>
                </a>
            </li>
            <li>
                <a href="/Admin/User" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Users" ? "active" : "")">
                    <i class="bi bi-person-badge"></i>
                    <span>Kullanıcılar</span>
                </a>
            </li>
            <li>
                <a href="/Admin/Reports" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Reports" ? "active" : "")">
                    <i class="bi bi-file-earmark-bar-graph"></i>
                    <span>Raporlar</span>
                </a>
            </li>
            <li>
                <a href="/Admin/Settings" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Settings" ? "active" : "")">
                    <i class="bi bi-gear"></i>
                    <span>Ayarlar</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <main class="main-content" id="mainContent">
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Check authentication
        // document.addEventListener('DOMContentLoaded', function() {
        //     const token = localStorage.getItem('token');
        //     if (!token) {
        //         window.location.href = '/Auth/Login';
        //         return;
        //     }

        //     loadUserInfo();
        // });

        // Load user info
        function loadUserInfo() {
            const userStr = localStorage.getItem('user');
            if (userStr) {
                try {
                    const user = JSON.parse(userStr);
                    if (user) {
                        document.getElementById('userName').textContent = `${user.firstName || ''} ${user.lastName || ''}`.trim() || 'Kullanıcı';
                        document.getElementById('userRole').textContent = user.roles && user.roles.length > 0 ? user.roles[0] : 'Admin';

                        const initials = ((user.firstName || 'K')[0] + (user.lastName || 'A')[0]).toUpperCase();
                        document.getElementById('userInitials').textContent = initials;
                    }
                } catch (e) {
                    console.error('Error parsing user data:', e);
                }
            }
        }

        // Toggle sidebar
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');

            const isExpanded = sidebar.classList.toggle('expanded');
            mainContent.classList.toggle('expanded');

            // Update inline style
            if (isExpanded) {
                sidebar.style.width = '250px';
            } else {
                sidebar.style.width = '60px';
            }

            // Save state
            localStorage.setItem('sidebarExpanded', isExpanded);
        }

        // Ensure sidebar always starts collapsed
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');

            // Remove any saved state
            localStorage.removeItem('sidebarExpanded');
            localStorage.removeItem('sidebarCollapsed');

            // Force sidebar to be collapsed
            sidebar.classList.remove('expanded');
            mainContent.classList.remove('expanded');

            // Force inline styles to ensure it's collapsed
            sidebar.style.width = '60px';
        });

        // Logout function
        async function logout() {
            const result = await Swal.fire({
                title: 'Çıkış Yap',
                text: 'Çıkış yapmak istediğinizden emin misiniz?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Evet, Çıkış Yap',
                cancelButtonText: 'İptal',
                confirmButtonColor: '#dc3545'
            });

            if (result.isConfirmed) {
                localStorage.removeItem('token');
                localStorage.removeItem('user');
                window.location.href = '/Auth/Login';
            }
        }

        // Set active menu item based on current URL
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const menuItems = document.querySelectorAll('.sidebar-nav a');

            menuItems.forEach(item => {
                item.classList.remove('active');
                if (item.getAttribute('href') === currentPath) {
                    item.classList.add('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>