<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Seçim Sistemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .sb-topnav {
            background-color: #212529;
        }

        .sb-sidenav {
            background-color: #212529;
        }

            .sb-sidenav .nav-link {
                color: #c2c7d0;
            }

                .sb-sidenav .nav-link:hover {
                    color: #fff;
                }

                .sb-sidenav .nav-link.active {
                    color: #fff;
                    background-color: #495057;
                }

        .card-header {
            font-weight: 600;
        }

        .huge {
            font-size: 2rem;
            font-weight: bold;
        }

        #layoutSidenav {
            display: flex;
            min-height: 100vh;
        }

        #layoutSidenav_nav {
            flex-basis: 225px;
            flex-shrink: 0;
            transition: transform .15s ease-in-out;
            z-index: 1038;
            transform: translateX(0);
        }

        #layoutSidenav_content {
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            min-width: 0;
            flex-grow: 1;
            min-height: calc(100vh - 56px);
            margin-left: 225px;
        }

        .sb-sidenav-toggled #layoutSidenav_nav {
            transform: translateX(-225px);
        }

        .sb-sidenav-toggled #layoutSidenav_content {
            margin-left: 0;
        }

        @@media (max-width: 991.98px) {
            #layoutSidenav_nav {
                transform: translateX(-225px);
            }

            #layoutSidenav_content {
                margin-left: 0;
            }

            .sb-sidenav-toggled #layoutSidenav_nav {
                transform: translateX(0);
            }
        }
    </style>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" asp-controller="Home" asp-action="Index">
            <i class="fas fa-vote-yea"></i> Seçim Sistemi
        </a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i> @User.Identity.Name
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-user"></i> Profil</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-cog"></i> Ayarlar</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item">
                                <i class="fas fa-sign-out-alt"></i> Çıkış
                            </button>
                        </form>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="sb-sidenav-menu-heading">Admin</div>
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Dashboard
                            </a>

                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse"
                               data-bs-target="#collapseCompanies" aria-expanded="false">
                                <div class="sb-nav-link-icon"><i class="fas fa-building"></i></div>
                                Firma Yönetimi
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapseCompanies" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Companies">
                                        Firma Listesi
                                    </a>
                                    <a class="nav-link" asp-controller="Admin" asp-action="CreateCompany">
                                        Yeni Firma Ekle
                                    </a>
                                </nav>
                            </div>

                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse"
                               data-bs-target="#collapseUsers" aria-expanded="false">
                                <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                                Kullanıcı Yönetimi
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapseUsers" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Users">
                                        Kullanıcı Listesi
                                    </a>
                                    <a class="nav-link" asp-controller="Admin" asp-action="CreateUser">
                                        Yeni Kullanıcı Ekle
                                    </a>
                                </nav>
                            </div>

                            <a class="nav-link" asp-controller="Admin" asp-action="Contacts">
                                <div class="sb-nav-link-icon"><i class="fas fa-address-card"></i></div>
                                Yetkili Yönetimi
                            </a>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("SandikGorevlisi") || User.IsInRole("BallotOfficer"))
                        {
                            <div class="sb-sidenav-menu-heading">Oylama</div>
                            <a class="nav-link" asp-controller="Vote" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-vote-yea"></i></div>
                                Oy Kullandırma
                            </a>
                            <a class="nav-link" asp-controller="Vote" asp-action="Results">
                                <div class="sb-nav-link-icon"><i class="fas fa-chart-bar"></i></div>
                                Sonuçlar
                            </a>
                        }
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Giriş yapan:</div>
                    @User.FindFirst("FullName")?.Value
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">© @DateTime.Now.Year Seçim Sistemi</div>
                        <div>
                            <a href="#">Gizlilik Politikası</a>
                            &middot;
                            <a href="#">Kullanım Şartları</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        window.addEventListener('DOMContentLoaded', event => {
            // Toggle the side navigation
            const sidebarToggle = document.body.querySelector('#sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', event => {
                    event.preventDefault();
                    document.body.classList.toggle('sb-sidenav-toggled');
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>