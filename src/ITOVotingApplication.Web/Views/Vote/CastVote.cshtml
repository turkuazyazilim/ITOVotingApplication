@model ITOVotingApplication.Web.Models.CastVoteViewModel
@{
    ViewData["Title"] = "Oy Kullan";
}

<div class="container-fluid">
    <h1 class="mt-4">Oy Kullanma İşlemi</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Oy Kullandırma</a></li>
        <li class="breadcrumb-item active">Oy Kullan</li>
    </ol>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Seçmen Bilgileri Kartı -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-user-check"></i> Seçmen Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-group mb-3">
                                <label class="text-muted small">Seçmen Adı Soyadı</label>
                                <h5 class="mb-0">@Model.ContactName</h5>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group mb-3">
                                <label class="text-muted small">Firma</label>
                                <h5 class="mb-0">@Model.CompanyName</h5>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="text-muted small">Sandık No</label>
                                <h5 class="mb-0">
                                    <span class="badge bg-primary">Sandık @Model.BallotBoxId</span>
                                </h5>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="text-muted small">İşlem Zamanı</label>
                                <h5 class="mb-0">@DateTime.Now.ToString("dd.MM.yyyy HH:mm")</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Oy Kullanma Formu -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-vote-yea"></i> Oy Kullanma</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CastVote" method="post" id="voteForm">
                        <input type="hidden" asp-for="ContactId" />
                        <input type="hidden" asp-for="ContactName" />
                        <input type="hidden" asp-for="CompanyName" />
                        <input type="hidden" asp-for="BallotBoxId" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-comment-alt"></i> Açıklama (İsteğe Bağlı)
                            </label>
                            <textarea asp-for="Description"
                                      class="form-control"
                                      rows="3"
                                      placeholder="Oy kullanma işlemi ile ilgili not ekleyebilirsiniz..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Bu alan isteğe bağlıdır. Maksimum 500 karakter girebilirsiniz.
                            </small>
                        </div>

                        <!-- Uyarı Mesajı -->
                        <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
                            <i class="fas fa-exclamation-triangle me-2" style="font-size: 1.5rem;"></i>
                            <div>
                                <strong>Önemli Uyarı!</strong><br>
                                Oy kullanma işlemi geri alınamaz. Lütfen işlemi onaylamadan önce seçmen bilgilerini kontrol ediniz.
                            </div>
                        </div>

                        <!-- Onay Checkbox -->
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="confirmVote" required>
                            <label class="form-check-label" for="confirmVote">
                                <strong>Yukarıdaki bilgileri kontrol ettim ve oy kullanma işlemini onaylıyorum.</strong>
                            </label>
                        </div>

                        <!-- İşlem Butonları -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Vazgeç
                            </a>
                            <button type="button"
                                    class="btn btn-success btn-lg"
                                    id="submitVoteBtn"
                                    data-bs-toggle="modal"
                                    data-bs-target="#confirmModal"
                                    disabled>
                                <i class="fas fa-check-circle"></i> Oyu Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Bilgilendirme Kartı -->
            <div class="card">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-info-circle"></i> Bilgilendirme</h6>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Her seçmen sadece bir kez oy kullanabilir.</li>
                        <li>Oy kullanma işlemi sistem tarafından kayıt altına alınmaktadır.</li>
                        <li>İşlem tamamlandıktan sonra değişiklik yapılamaz.</li>
                        <li>Herhangi bir sorun yaşarsanız sistem yöneticisi ile iletişime geçiniz.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Onay Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title" id="confirmModalLabel">
                    <i class="fas fa-question-circle"></i> İşlemi Onayla
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-vote-yea text-success" style="font-size: 3rem;"></i>
                </div>
                <p class="text-center">
                    <strong>@Model.ContactName</strong> adlı seçmen için oy kullanma işlemini onaylıyor musunuz?
                </p>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i> Bu işlem geri alınamaz!
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> İptal
                </button>
                <button type="button" class="btn btn-success" id="confirmVoteBtn">
                    <i class="fas fa-check"></i> Evet, Oyu Kaydet
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Başarı Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="successModalLabel">
                    <i class="fas fa-check-circle"></i> İşlem Başarılı
                </h5>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    <h4 class="mt-3">Oy Başarıyla Kaydedildi!</h4>
                    <p class="text-muted">İşlem başarıyla tamamlandı.</p>
                </div>
            </div>
            <div class="modal-footer">
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-list"></i> Listeye Dön
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Onay checkbox kontrolü
            $('#confirmVote').change(function() {
                if ($(this).is(':checked')) {
                    $('#submitVoteBtn').prop('disabled', false);
                } else {
                    $('#submitVoteBtn').prop('disabled', true);
                }
            });

            // Modal'dan onay verildiğinde formu gönder
            $('#confirmVoteBtn').click(function() {
                // Butonu devre dışı bırak (çift tıklamayı önle)
                $(this).prop('disabled', true);
                $(this).html('<span class="spinner-border spinner-border-sm me-2"></span>İşleniyor...');

                // Modal'ı kapat
                $('#confirmModal').modal('hide');

                // Formu gönder
                $('#voteForm').submit();
            });

            // Karakter sayacı
            $('#Description').on('input', function() {
                var maxLength = 500;
                var currentLength = $(this).val().length;
                var remaining = maxLength - currentLength;

                if (remaining < 50) {
                    $(this).next('.text-danger').text('Kalan karakter: ' + remaining);
                } else {
                    $(this).next('.text-danger').text('');
                }
            });

            // Form submit öncesi son kontrol
            $('#voteForm').on('submit', function(e) {
                if (!$('#confirmVote').is(':checked')) {
                    e.preventDefault();
                    alert('Lütfen onay kutusunu işaretleyiniz.');
                    return false;
                }
            });

            // Başarı mesajı varsa modal'ı göster
        @if (TempData["Success"] != null)
        {
            <text>
                    $('#successModal').modal('show');
                    setTimeout(function() {
                        window.location.href = '@Url.Action("Index")';
                    }, 3000);
            </text>
        }

            // Hata mesajı için alert
        @if (TempData["Error"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Hata!',
                        text: '@TempData["Error"]',
                        confirmButtonText: 'Tamam'
                    });
            </text>
        }
        });

        // Tarayıcı geri tuşu uyarısı
        window.addEventListener('beforeunload', function (e) {
            if ($('#confirmVote').is(':checked') && !$('#voteForm').hasClass('submitted')) {
                e.preventDefault();
                e.returnValue = 'İşleminiz tamamlanmadı. Sayfadan ayrılmak istediğinize emin misiniz?';
            }
        });
    </script>

    <!-- SweetAlert2 CDN (isteğe bağlı, daha güzel alertler için) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}